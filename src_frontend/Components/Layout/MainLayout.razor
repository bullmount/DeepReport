@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<DispatcherProvider/>
 
<MudLayout>
  <MudAppBar Elevation="1" Dense="true">
    <MudText Typo="Typo.h5" Class="ml-3">DeepReport - Prototipo</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Edge="Edge.End" />
  </MudAppBar>
  <MudMainContent Style="background-color:#ccc;height:100vh" >
    <MudContainer MaxWidth="MaxWidth.Large" Class="mud-elevation-2 mt-2" Style="height:calc(100vh - 100px); background-color:white;">
      @Body
    </MudContainer>
  </MudMainContent>
</MudLayout>